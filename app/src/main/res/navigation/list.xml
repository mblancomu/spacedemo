<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list"
    app:navGraph="@navigation/list"
    app:startDestination="@+id/listScreen">

    <fragment
        android:id="@+id/listScreen"
        android:name="com.manuelblanco.spacedemo.ui.list.ListFragment"
        android:label="@string/title_list"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/detailScreen" />
    </fragment>

    <fragment
        android:id="@+id/detailScreen"
        android:name="com.manuelblanco.spacedemo.ui.detail.DetailFragment"
        android:label="@string/title_detail"
        tools:layout="@layout/fragment_detail" />

</navigation>